<table>
  <thead>
       <tr>
        <th>Titulo</th>
        <th>Language</th>
        <th>Paginas</th>
        <th>Descripcion</th>
        <th>Autor</th>
        <th>Categoria</th>
        <th>Editorial</th>
       </tr>
  </thead>
  <tbody>
       <% @books.each do |book| %>
       <tr>
           <td><%= book.title%></td>
           <td><%= book.language%></td>
           <td><%= book.pages%></td>
           <td><%= book.description%></td>
           <% unless book.author.nil? %>
              <td><%= book.author.name %></td>
           <% end %>
           <% unless book.category.nil? %>
              <td><%= book.category.category %></td>
           <% end %>
           <% unless book.editorial.nil? %>
              <td><%= book.editorial.name %></td>
           <% end %>
       </tr>
       <% end %>
  </tbody>
 </table>

